<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#213a84"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.angiopasqui.permissionchecker.MainActivity">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/shieldicon"
        />

    <TextView
        android:id="@+id/title"
        android:textSize="25dp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benvenuto in PermissionChecker" />

    <ImageView
        android:id="@+id/icon_lock_unlock"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/title"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/lock"
        />

    <TextView
        android:id="@+id/monitoring"
        android:textSize="20dp"
        android:text="@string/monitoring_not_active"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/icon_listApp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/icon_lock_unlock"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/listapp"
        />

    <TextView
        android:id="@+id/text_listApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="@string/list_app"
        android:textColor="#ffff"
        android:layout_below="@id/monitoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/text_initMonitoring"
        android:layout_marginTop="30dp"
        android:text="@string/init_monitoring"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/icon_listApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/start"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_initMonitoring"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/play_icon"
        />

    <ImageView
        android:id="@+id/stop"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_initMonitoring"
        android:layout_width="80dp"
        android:layout_height="80dp"
        />
</RelativeLayout>
